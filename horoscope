    <script>
        // Function to set a new horoscope message daily
        function getDailyHoroscope() {
            const horoscopes = [
                "Today, your instincts are sharp, and it's a great time to trust your gut. Focus on finding balance and embracing new challenges with confidence.",
                "You might find yourself drawn to a creative project. Let your passion guide you and don't be afraid to take the lead.",
                "A conversation today might reveal hidden truths. Stay open and listen carefully—it could change your perspective.",
                "Scorpio, today is perfect for some self-reflection. Take time to recharge and connect with your deeper emotions.",
                "An unexpected opportunity may present itself today. Be ready to seize the moment, but keep an eye out for the details.",
                "Your energy is magnetic right now. Use it to draw in positive connections and set new goals for the future.",
                "It’s a good day for clearing out old patterns and making room for something new. Let go of what no longer serves you.",
            ];

            // Get a horoscope based on the current date
            const today = new Date();
            const index = today.getDate() % horoscopes.length;
            return horoscopes[index];
        }

        // Set the daily horoscope message
        document.getElementById('horoscope-message').textContent = getDailyHoroscope();
    </script>
